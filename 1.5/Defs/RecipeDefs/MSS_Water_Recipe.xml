<?xml version="1.0" encoding="utf-8"?>

<Defs>
    <RecipeDef>
        <defName>MSS_Thirst_Refine_Unsafe_Water</defName>
        <label>refine unsafe water into safe water packs</label>
        <description>A process which refines vast amounts of contaminated water into a small, but risk-free, amount of safe water though complex distillation.</description>
        <jobString>refining unsafe water.</jobString>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
        <workAmount>2500</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>MSS_Unsafe_Water</li>
                    </thingDefs>
                </filter>
                <count>10</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>MSS_Unsafe_Water</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <HemogenPack>1</HemogenPack>
        </products>
        <recipeUsers>
            <li>BiofuelRefinery</li>
        </recipeUsers>
    </RecipeDef>

