<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThoughtDef>
    <defName>MSS_Thirst_IngestedWaterPack</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>ingested fresh water</label>
        <description>I ingested a fresh water pack. Hydrating and refreshing!</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>MSS_Thirst_IngestedPoisonedWaterPack</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>3</durationDays>
    <stackLimit>5</stackLimit>
    <stages>
      <li>
        <label>ingested poisoned water</label>
        <description>I ingested a poisoned water pack. It kept me alive, but now I feel funny and I can't get the taste out of my mouth.</description>
        <baseMoodEffect>-7</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>MSS_Thirst_IngestedCrudeWaterPack</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>3</durationDays>
    <stackLimit>5</stackLimit>
    <stages>
      <li>
        <label>ingested poisoned water</label>
        <description>I ingested a crude water pack. It kept me alive, but felt wrong.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>MSS_Thirst_IngestedArtificialWaterPack</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>3</durationDays>
    <stackLimit>5</stackLimit>
    <stages>
      <li>
        <label>ingested artificial water</label>
        <description>I ingested an artificial water pack. It's almost just regular water, but something still feels off...</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>